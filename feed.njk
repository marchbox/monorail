---
permalink: feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{metadata.title}}</title>
  <subtitle>{{metadata.description}}</subtitle>
  <link href="{{metadata.host}}/{{permalink}}" rel="self"/>
  <link href="{{metadata.host}}"/>
  <updated>{{collections.articles|getNewestCollectionItemDate|dateToRfc3339}}</updated>
  <id>{{metadata.host}}</id>
  <author>
    <name>{{metadata.author.name}}</name>
    <email>{{metadata.author.email}}</email>
  </author>
  {%- for post in collections.articles %}
  {% set absolutePostUrl %}{{post.url|url|absoluteUrl(metadata.host)}}{% endset %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ absolutePostUrl }}"/>
    <updated>{{post.date|dateToRfc3339}}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">{{post.templateContent|htmlToAbsoluteUrls(absolutePostUrl)}}</content>
  </entry>
  {%- endfor %}
</feed>
