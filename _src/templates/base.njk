<!doctype html>
{% set is_home = page.url|url === '/' %} 

<html lang="en">

<head>
<meta charset="utf-8">
<title>
  {% if is_home %}
    {{title}}
  {% else %}
    {{title + " – " if title}}{{metadata.title}}
  {% endif %}
</title>
{% if intro or is_home %}
  <meta name="description" content="{{intro if not is_home else metadata.description}}">
{% endif %}
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
<meta name="canonical" content="{{metadata.host + page.url|url}}">
<link rel="icon" href="{{'/assets/favicon.png'|url}}">
<link rel="icon" href="{{'/assets/favicon.svg'|url}}" type="image/svg+xml">
<link href="{{fonts.google|getFontUrl|safe}}" rel="stylesheet"> 
<link rel="stylesheet" href="{{'/css/default.css'|url}}">
</head>

<body>

<header class="header">
  <a class="logo" href="{{'/'|url}}" title="Return to the entrance">
    <land-logo aria-label="marchbox.com’s logo" width="204" height="120"
        src="{{'/assets/logo.svg' | url}}"></land-logo>
  </a>
  <nav class="nav" is="land-monorail" aria-label="main navigation">
    <div class="monorail-station" role="none">
      <div class="monorail-train" role="none">
        {% for entry in collections.all|eleventyNavigation %}
          {% set isActive = entry.url == page.url or entry|isParent(page) %}
          <a href="{{entry.url | url}}"
              class="monorail-car{% if isActive %} active{% endif %}">
            <span role="none">{{entry.title}}</span>
          </a>
        {% endfor %}
      </div>
    </div>
  </nav>
</header>

<main>{{content|safe}}</main>

<footer class="footer">
  <div class="fenced" role="none">
    <a href="https://creativecommons.org/licenses/by-sa/4.0/"
        title="Creative Commons Attribution-ShareAlike 4.0 International license">
      CC-BY-SA-4.0
    </a>
  </div>
  <land-sidewalks src="{{'/assets/decors/tree.svg'|url}}"></land-sidewalks>
</footer>

<script src="{{'/js/main.js' | url}}" async defer></script>
</body>

</html>
