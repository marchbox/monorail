{% if collections.articles.length %}
  {% for article in collections.articles %}
  <article>
    {% set h_tag = article_list_h_tag or 'h2' %}
    <{{h_tag}}><a href="{{article.url|url}}">{{article.data.title}}</a></{{h_tag}}>
    <p>{{article.date|readableDate}}
    <p>{{article.data.excerpt}}
    <p><a href="{{article.url|url}}" class="readmore">Read on</a>
  </article>
  {% endfor %}
{% endif %}
