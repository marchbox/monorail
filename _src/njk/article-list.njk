{% for article in article_list_collection %}
<article>
  <header>
    {% set h_tag = article_list_h_tag or 'h2' %}
    <{{h_tag}}>
      <a href="{{article.url|url}}">{{article.data.title}}</a>
    </{{h_tag}}>
    <div class="post-meta" role="none">
      <p><time datetime="{{article.date|attrDate}}">{{article.date|readableDate}}</time></p>
    </div>
  </header>
  <p>
    {{article.data.excerpt}}
    <a href="{{article.url|url}}"
        title="Continue reading article “{{article.data.title}}”">
      Continue reading
    </a>
  </p>
</article>
{% endfor %}
