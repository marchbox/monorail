<!doctype html>
{% set is_home = page.url|url === '/' %} 

<html lang="en">

<head>
<meta charset="utf-8">

{% set title %}{% filter trim %}
  {% if is_home %}{{title|safe}}
  {% else %}{{(title + " – ")|safe if title}}{{metadata.title}}
  {% endif %}
{% endfilter %}{% endset %}
<title>{{title|safe}}</title>

{% set description %}{% filter trim %}
  {% if is_home %}{{metadata.description}}
  {% elif excerpt %}{{excerpt}}
  {% elif intro %}{{intro}}
  {% endif %}
{% endfilter %}{% endset %}
{% if description %}
  <meta name="description" content="{{description|safe}}">
{% endif %}

<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
<meta name="canonical" content="{{metadata.host + page.url|url}}">
<link rel="alternate" type="application/rss+xml" title="All articles and drawings" href="{{metadata.host}}/feed.xml">
