<div class="drawings margin-trim" role="none">
  <h1>Drawings</h1>

  <section aria-labelledby="happiest-heading">
    <h2 id="happiest-heading">Hppiest</h2>
    {% for drawing in drawings.happiest|sort(true,false,'date') %}
    <a href="{{('/drawings/happiest/'+drawing.key)|url}}">
      <figure>
        <img src="{{('/drawings/happiest/'+drawing.key+'.jpg')|url}}"
            alt="{{drawing.title}}" loading="lazy" width="600" height="600">
        <figcaption>
          <p>{{drawing.title}}</p>
          <p>{{drawing.caption}}</p>
        </figcaption>
      </figure>
    </a>
    {% endfor %}
  </section>
</div>
