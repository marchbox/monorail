---
layout: base.njk
override:tags: []
permalink: '/articles/{% if pagination.pageNumber > 0 %}{{pagination.pageNumber + 1}}/{% endif %}index.html'
pagination:
  data: collections.article
  size: 10
  reverse: true
eleventyNavigation:
  key: Articles
  order: 2
eleventyComputed:
  title: 'Articles{% if pagination.pageNumber > 0 %}: Page {{pagination.pageNumber + 1}}{% endif %}'
---

<div class="articles margin-trim" role="none">
  <h1 id="title">Articles</h1>

  <section class="article-list" role="none" aria-labelledby="title">
    {% set articleListConfig = {
      collection: pagination.items
    } %}
    {% include "_src/njk/article-list.njk" %}
  </section>

  {% include '_src/njk/pagination.njk' %}

  <aside>
    <section class="surface margin-trim">
      <h2>Tags</h2>
      <ul>
        {% for tag in collections.articlesTags %}
        <li>
          <a href="{{tag.href|url}}"
              title="Articles tagged with “{{tag.tag|postTagName}}”">
            {{tag.tag|postTagName}} ({{collections[tag.tag].length}})
          </a>
        </li>
        {% endfor %}
      </ul>
    </section>
    <section class="surface margin-trim">
      <h2>Archives</h2>
      <ul>
        {% for archive in collections.articlesArchives %}
        <li>
          <a href="{{archive.href|url}}"
              title="Articles written in {{archive.date|readableYearMonth}}">
            {{archive.date|readableYearMonth}} ({{archive.articles.length}})
          </a>
        </li>
        {% endfor %}
      </ul>
    </section>
  </aside>
</div>
