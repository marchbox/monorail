<div class="articles margin-trim" role="none">
  <h1 id="title">Articles</h1>

  <section class="articles-list" role="none" aria-labelledby="title">
    {% include "_src/njk/article-list.njk" %}
  </section>

  <aside>
    <section class="surface margin-trim">
      <h2 class="plain">Tags</h2>
      <ul class="tags">
        {% for tag in collections.articlesTags %}
        <li>
          <a href="{{tag.href|url}}"
              title="Articles tagged with “{{tag.tag|articleTagName}}”">
            {{tag.tag|articleTagName}} ({{collections[tag.tag].length}})
          </a>
        </li>
        {% endfor %}
      </ul>
    </section>
    <section class="surface margin-trim">
      <h2 class="plain">Archives</h2>
      <ul class="articles-archives">
        {% for yearMonth in collections.articlesArchives %}
        <li>
          <a href="{{yearMonth.href|url}}"
              title="Articles written in {{yearMonth.date|readableYearMonth}}">
            {{yearMonth.date|readableYearMonth}}
          </a>
        </li>
        {% endfor %}
      </ul>
    </section>
  </aside>
</div>
